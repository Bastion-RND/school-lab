{
  "$id": "diagnostic.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "School Laboratory Diagnostic",
  "description": "School Laboratory instance diagnostic",
  "$defs": {
    "string": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "title": {
      "$ref": "#/$defs/string"
    },
    "result": {
      "type": "object",
      "properties": {
        "mask": {
          "$ref": "#/$defs/string"
        },
        "message": {
          "$ref": "#/$defs/string"
        }
      }
    },
    "record": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/$defs/string"
        },
        "success": {
          "$ref": "#/$defs/result"
        },
        "failure": {
          "$ref": "#/$defs/result"
        }
      },
      "required": [
        "title"
      ]
    },
    "default": {
      "type": "object",
      "properties": {
        "success": {
          "type": "object",
          "properties": {
            "mask": {
              "$ref": "#/$defs/string"
            },
            "message": {
              "$ref": "#/$defs/string"
            }
          },
          "required": [
            "mask",
            "message"
          ]
        },
        "failure": {
          "type": "object",
          "properties": {
            "mask": {
              "$ref": "#/$defs/string"
            },
            "message": {
              "$ref": "#/$defs/string"
            }
          },
          "required": [
            "mask",
            "message"
          ]
        }
      },
      "required": [
        "success",
        "failure"
      ]
    }
  },
  "type": "object",
  "properties": {
    "device": {
      "type": "object",
      "properties": {
        "default": {
          "$ref": "#/$defs/default"
        },
        "LAB_TYPE": {
          "$ref": "#/$defs/record"
        },
        "HARDWARE": {
          "$ref": "#/$defs/record"
        },
        "FIRMWARE": {
          "$ref": "#/$defs/record"
        }
      },
      "required": [
        "default",
        "LAB_TYPE",
        "HARDWARE",
        "FIRMWARE"
      ]
    },
    "sensor": {
      "type": "object",
      "properties": {
        "default": {
          "$ref": "#/$defs/default"
        },
        "ADC101C027": {
          "$ref": "#/$defs/record"
        },
        "INA219": {
          "$ref": "#/$defs/record"
        },
        "ADS8665": {
          "$ref": "#/$defs/record"
        },
        "BH1750": {
          "$ref": "#/$defs/record"
        },
        "HDC1080": {
          "$ref": "#/$defs/record"
        },
        "HX71x": {
          "$ref": "#/$defs/record"
        },
        "LIS2DH12": {
          "$ref": "#/$defs/record"
        },
        "MHZ19": {
          "$ref": "#/$defs/record"
        },
        "MPU6050": {
          "$ref": "#/$defs/record"
        },
        "AbsolutePressureSensor": {
          "$ref": "#/$defs/record"
        },
        "AccelerometerSensor": {
          "$ref": "#/$defs/record"
        },
        "AmbientLightSensor": {
          "$ref": "#/$defs/record"
        },
        "BatteryLevelSensor": {
          "$ref": "#/$defs/record"
        },
        "BloodPressureSensor": {
          "$ref": "#/$defs/record"
        },
        "CarbonDioxideSensor": {
          "$ref": "#/$defs/record"
        },
        "ChlorideIonsSensor": {
          "$ref": "#/$defs/record"
        },
        "ConductanceSensor": {
          "$ref": "#/$defs/record"
        },
        "CurrentSensor": {
          "$ref": "#/$defs/record"
        },
        "VoltageSensor": {
          "$ref": "#/$defs/record"
        },
        "HeartRateMonitorSensor": {
          "$ref": "#/$defs/record"
        },
        "LoadCellSensor": {
          "$ref": "#/$defs/record"
        },
        "MagneticFluxSensor": {
          "$ref": "#/$defs/record"
        },
        "NitrateIonsSensor": {
          "$ref": "#/$defs/record"
        },
        "NoiseMeterSensor": {
          "$ref": "#/$defs/record"
        },
        "OpticalDensitySensor": {
          "$ref": "#/$defs/record"
        },
        "PHLevelSensor": {
          "$ref": "#/$defs/record"
        },
        "PulseMeterSensor": {
          "$ref": "#/$defs/record"
        },
        "SoilMoistureSensor": {
          "$ref": "#/$defs/record"
        },
        "TemperatureHumiditySensorDHT22": {
          "$ref": "#/$defs/record"
        },
        "TemperatureHumiditySensorHDC1080": {
          "$ref": "#/$defs/record"
        },
        "TemperatureKTypeSensor": {
          "$ref": "#/$defs/record"
        },
        "TemperatureNTCSensor": {
          "$ref": "#/$defs/record"
        }
      },
      "required": [
        "default",
        "ADC101C027",
        "ADS8665",
        "BH1750",
        "HDC1080",
        "HX71x",
        "INA219",
        "LIS2DH12",
        "MHZ19",
        "MPU6050",
        "AbsolutePressureSensor",
        "AccelerometerSensor",
        "AmbientLightSensor",
        "BatteryLevelSensor",
        "BloodPressureSensor",
        "CarbonDioxideSensor",
        "ChlorideIonsSensor",
        "ConductanceSensor",
        "CurrentSensor",
        "VoltageSensor",
        "HeartRateMonitorSensor",
        "LoadCellSensor",
        "MagneticFluxSensor",
        "NitrateIonsSensor",
        "NoiseMeterSensor",
        "OpticalDensitySensor",
        "PHLevelSensor",
        "PulseMeterSensor",
        "SoilMoistureSensor",
        "TemperatureHumiditySensorDHT22",
        "TemperatureHumiditySensorHDC1080",
        "TemperatureKTypeSensor",
        "TemperatureNTCSensor"
      ]
    }
  },
  "required": [
    "device",
    "sensor"
  ]
}
