{
  "$id": "multisensor.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "School Laboratory Configuration",
  "description": "School Laboratory multisensor (lab) config",
  "$definitions": {
    "uuid": {
      "type": "string",
      "minLength": 36,
      "maxLength": 36
    },
    "title": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1,
      "maxLength": 64
    },
    "description": {
      "type": "string",
      "maxLength": 256
    },
    "moduleName": {
      "type": "string",
      "maxLength": 32
    }
  },
  "type": "object",
  "properties": {
    "disabled": {
      "type": "boolean",
      "default": false
    },
    "uuid": {
      "$ref": "#/$definitions/uuid"
    },
    "title": {
      "$ref": "#/$definitions/title"
    },
    "description": {
      "$ref": "#/$definitions/description"
    },
    "moduleName": {
      "$ref": "#/$definitions/moduleName"
    },
    "advName": {
      "type": "string",
      "maxLength": 16
    },
    "sensors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "$ref": "#/$definitions/title"
          },
          "description": {
            "$ref": "#/$definitions/description"
          },
          "uuid": {
            "$ref": "#/$definitions/uuid"
          }
        },
        "required": [
          "uuid"
        ]
      }
    }
  },
  "required": [
    "uuid",
    "sensors",
    "advName",
    "moduleName"
  ]
}
