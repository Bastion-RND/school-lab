{
  "$id": "vendor.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Vendor specifications",
  "description": "School Laboratory vendor specifications",
  "type": "object",
  "$definitions": {
    "uuid": {
      "type": "string",
      "minLength": 36,
      "maxLength": 36
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "vendorLab": {
      "description": "Laboratory of vendor",
      "type": "object",
      "properties": {
        "uuid": {
          "type": "string",
          "minLength": 4,
          "maxLength": 36
        },
        "description": {
          "$ref": "#/$definitions/description"
        },
        "color": {
          "type": "string"
        },
        "lifeCycle": {
          "type": "string",
          "enum": [
            "ALPHA",
            "BETA",
            "RELEASE CANDIDATE",
            "RELEASE",
            "PRODUCTION"
          ],
          "default": "BETA"
        }
      },
      "required": [
        "uuid"
      ]
    }
  },
  "properties": {
    "uuid": {
      "$ref": "#/$definitions/uuid"
    },
    "title": {
      "$ref": "#/$definitions/title"
    },
    "titleLatin": {
      "$ref": "#/$definitions/title"
    },
    "target": {
      "type": "string",
      "description": "This property is needed to service of update"
    },
    "description": {
      "$ref": "#/$definitions/description"
    },
    "vendor": {
      "description": "Vendor information",
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/$definitions/title"
        },
        "description": {
          "$ref": "#/$definitions/description"
        },
        "logo": {
          "type": "string"
        },
        "colorPalette": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "title"
      ]
    },
    "labs": {
      "type": "object",
      "description": "Key is title of laboratory",
      "patternProperties": {
        "^[a-zA-Zа-яА-Я0-9 ]+$": {
          "type": "object",
          "$ref": "#/$definitions/vendorLab"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "uuid",
    "target",
    "title",
    "vendor",
    "labs"
  ]
}
