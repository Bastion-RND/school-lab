{
  "$id": "vendor.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Vendor specifications",
  "description": "School Laboratory vendor specifications",
  "type": "object",
  "$defs": {
    "uuid": {
      "type": "string",
      "minLength": 36,
      "maxLength": 36
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "vendorLab": {
      "description": "Laboratory of vendor",
      "type": "object",
      "properties": {
        "uuid": {
          "type": "string",
          "minLength": 4,
          "maxLength": 36
        },
        "title": {
          "$ref": "#/$defs/title"
        },
        "description": {
          "$ref": "#/$defs/description"
        },
        "color": {
          "type": "string"
        }
      },
      "required": [
        "uuid"
      ]
    }
  },
  "properties": {
    "uuid": {
      "$ref": "#/$defs/uuid"
    },
    "title": {
      "$ref": "#/$defs/title"
    },
    "target": {
      "type": "string",
      "description": "This property is needed to service of update"
    },
    "description": {
      "$ref": "#/$defs/description"
    },
    "vendor": {
      "description": "Vendor information",
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/$defs/title"
        },
        "description": {
          "$ref": "#/$defs/description"
        },
        "logo": {
          "type": "string"
        },
        "colorPalette": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "title"
      ]
    },
    "labs": {
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/vendorLab"
          }
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "uuid",
    "target",
    "title",
    "vendor",
    "labs"
  ]
}
